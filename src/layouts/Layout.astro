---
import { getImage } from "astro:assets";
import Nav from "../components/Nav.astro";
import "../style.css";

getImage;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />

        <meta name="generator" content={Astro.generator} />
        <title>bluKae's Personal Website</title>
        <meta
            name="description"
            content="Hello, I'm bluKae and this is my personal website."
        />
        <meta name="author" content="bluKae" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
        <meta property="og:title" content="bluKae" />
        <meta
            property="og:description"
            content="Hello, I'm bluKae and this is my personal website."
        />
        <meta property="og:image" content="https://blukae.de/avatar.png" />
        <meta property="og:url" content="https://blukae.de" />
        <meta property="og:type" content="website" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="bluKae" />
        <meta
            name="twitter:description"
            content="Hello, I'm bluKae and this is my personal website."
        />
        <meta name="twitter:image" content="https://blukae.de/avatar.webp" />
        <meta name="theme-color" content="#ffffff" />
    </head>
    <body class="h-screen flex flex-col items-center">
        <Nav />
        <slot />
    </body>
</html>

<style>
    :root {
        font-family:
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Oxygen,
            Ubuntu,
            Cantarell,
            "Open Sans",
            "Helvetica Neue",
            sans-serif;
    }
</style>
